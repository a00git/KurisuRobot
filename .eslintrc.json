{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "node": true,
    "browser": false
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": "error"
  }
}